{
  "name": "geek-text-server",
  "version": "1.0.0",
  "description": "Geek-Text backend server and API router",
  "main": "server.js",
  "scripts": {
    "test": "jest --coverage",
    "build": "babel . --out-dir dist --ignore node_modules",
    "start": "nodemon server.js --exec babel-node",
    "populate-mock": "node utils/gtdb_parse_upload.js",
    "database-export": "mongodump --db geek-text -o db_dump",
    "database-import": "mongorestore --db geek-text db_dump/geek-text/",
    "lint": "eslint . --ext js --fix"
  },
  "keywords": [
    "server",
    "geek-text",
    "web",
    "application",
    "books",
    "search"
  ],
  "author": "CEN 4010 - Group 8",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "mongoose": "^5.4.7"
  },
  "devDependencies": {
    "eslint": "^5.13.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9"
  },
  "jest": {
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test"
    }
  }
}
